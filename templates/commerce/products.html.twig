{% extends 'base.html.twig' %}


{% block title %}Les produits
{% endblock %}

{% block body %}
	<section class="row products">
		{% for product in products %}
			<div class="col-md-3">
				<div class="card mb-4 border-0" style="width: 18rem;">

					<img class="mx-auto my-3 d-block" src="{{product.image}}" alt="Image du produit">

					<div class="card-body">
						<p class=" font-weight-lighter">{{ product.nom }}</p>
						<p class="card-text">{{product.prix}}
							â‚¬</p>
					</div>
					<div class="text-center">
						<a href="{{ path('product', {'id': product.id}) }}" class="btn btn-primary btn-sm my-3">Voir le produit</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</section>
{% endblock %}
