{% extends 'base.html.twig' %}


{% block title %}Les produits{% endblock %}

{% block body %}
<section class="row products">
{% for product in products %}
<div class="col-md-4">
    <div class="card mb-3" style="width: 18rem;">

        <img src="{{product.image}}" alt="Image du produit">
        <div class="card-body">
            <h3>{{ product.nom }}</h3>
            <p class="card-text text-end fw-bold">{{product.prix}}
                â‚¬</p>
        </div>
        <a href="{{ path('product', {'id': product.id}) }}" class="btn btn-primary">Lire la suite</a>
    </div>
</div>
{% endfor %}
</section>
{% endblock %}